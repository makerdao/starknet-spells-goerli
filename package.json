{
  "name": "starknet-spells-goerli",
  "version": "0.0.1",
  "description": "Starknet Spells Goerli",
  "main": "src/app.ts",
  "repository": "https://github.com/makerdao/starknet-spells-goerli",
  "author": "Maciek Kaminski",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "tsc",
    "start": "node ./bin/app.js",
    "devnet": "./scripts/devnet.sh",
    "format": "prettier --check \"./**/*.ts\" README.md",
    "format:fix": "prettier --write \"./**/*.ts\" README.md",
    "lint": "eslint --ext .ts src",
    "lint:fix": "yarn lint --fix",
    "test": "node_modules/.bin/mocha --config .mocharc.js",
    "test:wait": "wget -q --retry-connrefused --delete-after http://0.0.0.0:5050/fork_status && yarn test",
    "test:ci": "concurrently -k 'yarn devnet' 'yarn test:wait; docker stop devnet'"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "chai": "^4.3.7",
    "earljs": "^0.2.3",
    "eslint": "^8.29.0",
    "eslint-config-typestrict": "^1.0.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-sonarjs": "^0.17.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "starknet": "^4.16.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "concurrently": "^7.6.0"
  }
}
